{
  "name": "Page action by URL",
  "version": "1.0",
  "description": "Shows a page action for urls which have the letter 'g' in them.",
  "background": { "scripts": ["jquery.min.js","background.js"],"persistent": false },
  "page_action" :
  {
    "default_icon" : "icon-19.png",
    "default_title" : "Our Backbrowser is the bomb!",
    "default_popup" : "popup.html"

  },

  "permissions" : [
    "tabs", "activeTab",
     "http://*/"

  ],


  
  "manifest_version": 2
}
